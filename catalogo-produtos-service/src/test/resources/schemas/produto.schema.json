{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "format": "uuid"
    },
    "nome": {
      "type": "string",
      "minLength": 1
    },
    "descricao": {
      "type": "string",
      "minLength": 1
    },
    "preco": {
      "type": "number",
      "minimum": 0
    },
    "qtdEstoque": {
      "type": "integer",
      "minimum": 0
    }
  },
  "required": [
    "nome",
    "descricao",
    "preco",
    "qtdEstoque"
  ],
  "additionalProperties": false
}